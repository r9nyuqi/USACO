import java.util.*;
import java.io.*;

public class HighCardWins {
	public static void main(String[] args) throws FileNotFoundException {
		Scanner in = new Scanner(System.in);
		int n = in.nextInt();
        while(n != 1)
        {
            if(n % 2 ==0)
            {
                n/=2;
            }
            else
            {
                n*=3;
                n+=1;
            }
            System.out.println(n);
        }
    }
    
}